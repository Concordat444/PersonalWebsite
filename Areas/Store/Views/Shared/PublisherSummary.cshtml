@model PublisherDTO

<tr class="table table-bordered table-striped">
    <td>@Model.PublisherId</td>
    <td>@Model.PublisherName</td>
    <td>@Model.GameCount</td>
    <td class="text-center">
        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@Model.PublisherId">Details</a>
        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model.PublisherId">Edit</a>
        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@Model.PublisherId">Delete</a>
    </td>
</tr>
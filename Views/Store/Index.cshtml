@model StoreListViewModel

@foreach (Game game in Model.Games ?? Enumerable.Empty<Game>())
{
    <div>
        <table class="table table-bordered table-striped">
            <tbody >
                <tr>
                    <td rowspan="3" class="col-2">
                        <img src="https://picsum.photos/100" />
                    </td>
                    <td><lable>Title: </lable></td>
                    <td>@(game.Name)</td>
                </tr>
                <tr>
                    <td><label for="Description">Description</label></td>
                    <td><p>@(game.Description)</p></td>
                </tr>
                <tr>
                    <td><label for="Price">Price</label></td>
                    <td>@(game.Price.ToString("c"))</td>
                </tr>
            </tbody>
        </table>
    </div>
}

<div page-model="@Model.PagingInfo" page-action="Index"
     page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-drk" page-class-selected="btn-primary"
     page-url-gameCategory="@Model.CurrentCategory!" class="btn-group pull-right m-1"></div>